extends baseEmail

block content    
    p Hi #{firstName},
    p Forgot your password! Submit a patch request with your new password and passswordConfirm to #{url}.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset Password
    p If you didn't forget your password then pls ignore this email